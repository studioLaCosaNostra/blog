<!DOCTYPE html>
<html<%= config.language ? " lang=" + config.language : ""%>>
<%- partial('_partial/head') %>
<body class="max-width mx-auto px3 <%- theme.direction -%>">
    <cookie-consent>
      This site uses cookies to analyse traffic, remember your preferences, and optimise your experience.
      <a href="/privacy-policy.html">Learn more, read the privacy policy page.</a>
    </cookie-consent>
    <% if (is_post()) { %>
      <%- partial('_partial/post/actions_desktop') %>
    <% } %>
    <div class="content index py4">
        <% if (!is_post()) { %>
          <%- partial('_partial/header') %>
        <% } %>
        <%- body %>
        <% if (is_post()) { %>
          <%- partial('_partial/post/actions_mobile') %>
        <% } %>
        <%- partial('_partial/footer') %>
    </div>
    <%- partial('_partial/styles') %>
    <%- partial('_partial/scripts') %>
    <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "url": "<%= config.url %>",
      "name": "<%= config.title %>"
    }
    </script>
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "Organization",
        "name": "<%= config.title %>",
        "email": "<%= config.organization_links.email %>",
        "url": "<%= config.url %>",
        "sameAs": [
          "<%= config.organization_links.facebook %>",
          "<%= config.organization_links.twitter %>",
          "<%= config.organization_links.github %>",
          "<%= config.organization_links.google_play %>",
          "<%= config.organization_links.youtube %>",
          "<%= config.organization_links.linkedin %>"
        ]
      }
      </script>  
</body>
</html>
